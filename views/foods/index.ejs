<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <a href="/users/<%= user._id %>/foods/new">Add New Item</a>
    <% if(pantry.length === 0) { %>
      <p>There are no items in this pantry.</p>
    <% } else { %>
      <ul>
        <% pantry.forEach(function(food) { %>
          <li>
            <%= food.name %>
            <!-- Edit link -->
            <a href="/users/<%= user._id %>/foods/<%= food._id %>/edit">Edit</a>
            <!-- Delete form -->
            <form method="POST" action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </li>
        <% }); %>
      </ul>
    <% } %>
  </body>
</html>
